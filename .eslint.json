{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base", 
        "prettier"
    ],
    "plugins": [
        "prettier",
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["**/*.test.js"],
    "rules": {
        "prettier/prettier": 2,
        "prefer-destructuring": "off",
        "no-plusplus": "off",
        "quotes": ["error", "single"],
        "react/prop-types": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
}